{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "async_ref": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "kafka",
            "rabbitmq",
            "redis"
          ]
        },
        "actors": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/actor_ref"
          }
        }
      },
      "required": [
        "type",
        "address",
        "actors"
      ],
      "additionalProperties": false
    },
    "actor_ref": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "produce": {
          "$ref": "#/definitions/message_ref"
        },
        "consume": {
          "$ref": "#/definitions/message_ref"
        },
        "delay": {
          "type": "number"
        },
        "limit": {
          "type": "integer"
        }
      },
      "additionalProperties": false
    },
    "message_ref": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "queue",
        "value"
      ],
      "properties": {
        "group": {
          "type": "string"
        },
        "queue": {
          "type": "string"
        },
        "key": {
          "type": [
            "string",
            "null"
          ]
        },
        "value": {
          "type": "string"
        },
        "headers": {
          "$ref": "#/definitions/headers_ref"
        }
      }
    },
    "service_ref": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "hostname": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "ssl": {
          "type": "boolean"
        },
        "sslCertFile": {
          "type": "string"
        },
        "sslKeyFile": {
          "type": "string"
        },
        "managementRoot": {
          "type": "string"
        },
        "oas": {
          "type": "string"
        },
        "endpoints": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/endpoint_ref"
          }
        },
        "performanceProfile": {
          "type": "string"
        },
        "fallbackTo": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "port"
      ]
    },
    "endpoint_ref": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "comment": {
          "type": "string"
        },
        "method": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "queryString": {
          "type": "object",
          "patternProperties": {
            ".+": {
              "type": "string"
            }
          }
        },
        "headers": {
          "type": "object",
          "patternProperties": {
            ".+": {
              "type": "string"
            }
          }
        },
        "body": {
          "type": "object",
          "properties": {
            "schema": {
              "oneOf": [
                {
                  "$ref": "http://json-schema.org/draft-07/schema#"
                },
                {
                  "type": "string"
                }
              ]
            },
            "text": {
              "type": "string"
            },
            "urlencoded": {
              "type": "object",
              ".+": {
                "type": "string"
              }
            },
            "multipart": {
              "type": "object",
              ".+": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "dataset": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "object"
              }
            },
            {
              "type": "string"
            }
          ]
        },
        "response": {
          "oneOf": [
            {
              "$ref": "#/definitions/response_ref"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/response_ref"
              }
            }
          ]
        },
        "multiResponsesLooped": {
          "type": "boolean"
        },
        "datasetLooped": {
          "type": "boolean"
        },
        "performanceProfile": {
          "type": "string"
        }
      },
      "required": [
        "path"
      ],
      "additionalProperties": false
    },
    "response_ref": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "properties": {
            "headers": {
              "$ref": "#/definitions/headers_ref"
            },
            "status": {
              "type": [
                "string",
                "integer"
              ]
            },
            "body": {
              "type": "string"
            },
            "useTemplating": {
              "type": "boolean"
            },
            "templatingEngine": {
              "type": "string"
            },
            "tag": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "headers_ref": {
      "oneOf": [
        {
          "type": "object",
          "patternProperties": {
            ".+": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              ]
            }
          }
        }
      ]
    },
    "profile_ref": {
      "type": "object",
      "properties": {
        "ratio": {
          "type": "number"
        },
        "delay": {
          "type": "number"
        },
        "faults": {
          "type": "object",
          "propertyNames": {
            "pattern": "^\\d+|RST|FIN|PASS$"
          },
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "ratio"
      ]
    }
  },
  "type": "object",
  "properties": {
    "management": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer"
        },
        "ssl": {
          "type": "boolean"
        },
        "sslCertFile": {
          "type": "string"
        },
        "sslKeyFile": {
          "type": "string"
        }
      },
      "required": [
        "port"
      ],
      "additionalProperties": false
    },
    "templatingEngine": {
      "type": "string"
    },
    "globals": {
      "type": "object",
      "properties": {
        "headers": {
          "$ref": "#/definitions/headers_ref"
        },
        "performanceProfile": {
          "type": "string"
        }
      }
    },
    "services": {
      "type": "array",
      "minItems": 1,
      "items": {
        "anyOf": [
          {
            "$ref": "#/definitions/service_ref"
          },
          {
            "$ref": "#/definitions/async_ref"
          }
        ]
      }
    },
    "performanceProfiles": {
      "type": "object",
      "patternProperties": {
        ".+": {
          "$ref": "#/definitions/profile_ref"
        }
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "services"
  ]
}
