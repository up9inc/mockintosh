{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "service_ref": {
      "type": "object",
      "properties": {
        "comment": {
          "type": "string"
        },
        "hostname": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "endpoints": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/endpoint_ref"
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "port"
      ]
    },
    "endpoint_ref": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "comment": {
          "type": "string"
        },
        "method": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "queryString": {
          "type": "object",
          "patternProperties": {
            ".+": {
              "type": "string"
            }
          }
        },
        "headers": {
          "type": "object",
          "patternProperties": {
            ".+": {
              "type": "string"
            }
          }
        },
        "body": {
          "type": "object",
          "properties": {
            "schema": {
              "$ref": "http://json-schema.org/draft-07/schema#"
            }
          }
        },
        "response": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "object",
              "properties": {
                "headers": {
                  "$ref": "#/definitions/headers_ref"
                },
                "status": {
                  "type": [
                    "string",
                    "integer"
                  ]
                },
                "body": {
                  "type": "string"
                },
                "useTemplating": {
                  "type": "boolean"
                },
                "templatingEngine": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          ]
        }
      },
      "required": [
        "path",
        "response"
      ],
      "additionalProperties": false
    },
    "headers_ref": {
      "oneOf": [
        {
          "type": "object",
          "patternProperties": {
            ".+": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              ]
            }
          }
        }
      ]
    }
  },
  "type": "object",
  "properties": {
    "templatingEngine": {
      "type": "string"
    },
    "globals": {
      "headers": {
        "$ref": "#/definitions/headers_ref"
      }
    },
    "services": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/service_ref"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "services"
  ]
}
