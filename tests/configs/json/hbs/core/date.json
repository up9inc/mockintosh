{
  "templatingEngine": "Handlebars",
  "services": [
    {
      "name": "Mock for Service1",
      "port": 8001,
      "endpoints": [
        {
          "path": "/time",
          "method": "GET",
          "response": "{{date.time}}"
        },
        {
          "path": "/time-shift",
          "method": "GET",
          "response": "{{date.time}}<br>{{date.time 42}}<br>{{date.time -42}}"
        },
        {
          "path": "/timefloat",
          "method": "GET",
          "response": "{{date.timefloat}}<br>{{date.timefloat 3}}"
        },
        {
          "path": "/timefloat-shift",
          "method": "GET",
          "response": "{{date.timefloat}}<br>{{date.timefloat 7 3.14}}<br>{{date.timefloat 7 -3.14}}"
        },
        {
          "path": "/date",
          "method": "GET",
          "response": "{{date.date}}<br>{{date.date '%Y-%m-%d %H:%M'}}"
        },
        {
          "path": "/date-shift",
          "method": "GET",
          "response": {
            "headers": {
              "Content-Type": "application/json; charset=UTF-8"
            },
            "body": "@templates/date.json.hbs"
          }
        }
      ]
    }
  ]
}
