{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "service_ref": {
      "type": "object",
      "properties": {
        "comment": {
          "type": "string"
        },
        "hostname": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "endpoints": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/endpoint_ref"
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "port",
        "endpoints"
      ]
    },
    "endpoint_ref": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string"
        },
        "comment": {
          "type": "string"
        },
        "method": {
          "type": "string"
        },
        "response": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "object",
              "properties": {
                "text": {
                  "type": "string"
                }
              }
            }
          ]
        }
      },
      "required": [
        "path",
        "response"
      ],
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "templatingEngine": {
      "type": "string"
    },
    "services": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/service_ref"
      }
    }
  },
  "additionalProperties": false
}
