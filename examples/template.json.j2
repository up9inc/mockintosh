      "port": 8001,
      "endpoints": [
        {
          "path": "/users",
          "method": "GET",
          "response": {
            "users": [{% for n in range(5) %}
              {
                "userId": "{{ range(10000, 100000) | random }}",
                "firstName": "{{ fake.first_name() }}",
                "lastName": "{{ fake.last_name() }}",
